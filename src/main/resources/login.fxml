<BorderPane prefHeight="423.0" prefWidth="631.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <stylesheets>
      <URL value="@login.css" />
   </stylesheets>
   <top>
      <ImageView fitHeight="196.0" fitWidth="200.0" BorderPane.alignment="CENTER">
         <image>
            <Image url="@ECS.png" />
         </image>
      </ImageView>
   </top>
   <bottom>
      <VBox alignment="CENTER" prefHeight="132.0" prefWidth="631.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="33.0" prefWidth="140.0" text="Login" />
         </children>
      </VBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="ECS Messenger">
               <font>
                  <Font name="Arial Bold Italic" size="31.0" />
               </font>
               <textFill>
                  <LinearGradient endY="0.8428571428571429">
                     <stops>
                        <Stop>
                           <color>
                              <Color />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </textFill>
            </Label>
            <Label text="Username:">
               <font>
                  <Font name="Arial" size="17.0" />
               </font></Label>
            <TextField fx:id="textField" alignment="CENTER" maxWidth="250.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="10.0" promptText="Enter your username" />
         </children>
      </VBox>
   </center>

</BorderPane>
